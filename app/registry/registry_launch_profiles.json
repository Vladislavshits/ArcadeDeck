{
  "ppsspp": {
    "name": "ppsspp",
    "launch_method": "flatpak",
    "flatpak_id": "org.ppsspp.PPSSPP",
    "command_template": "XDG_CONFIG_HOME={config_dir} flatpak run {flatpak_id} {game_path}",
    "config_source_dir": "{project_root}/app/emulators/PSP/",
    "config_files": ["ppsspp.ini"],
    "env_variables": {
      "SDL_VIDEO_MINIMIZE_ON_FOCUS_LOSS": "0"
    },
    "post_launch_actions": [
      "echo '✅ Игра завершена. Конфиг ArcadeDeck успешно использован!'"
    ]
  }
}
