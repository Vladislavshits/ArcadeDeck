}

/* СТИЛИ ДЛЯ КНОПОК ПЕРЕКЛЮЧАТЕЛЯ ТЕМЫ */
ModernToggleButton {
    min-height: 50px;
    min-width: 130px;
    border-radius: 6px;
    font-weight: normal;
    padding: 0px;
}

.dark-theme ModernToggleButton {
    background-color: #f0f0f0;
    color: #333;
    border: 2px solid #ccc;
}

.dark-theme ModernToggleButton:hover {
    background-color: #e0e0e0;
    border: 2px solid #bbb;
}

.dark-theme ModernToggleButton:checked {
    background-color: #0078d4;
    color: white;
    border: 2px solid #0078d4;
    font-weight: bold;
}

.dark-theme ModernToggleButton:checked:hover {
    background-color: #106ebe;
    border: 2px solid #106ebe;
}

.light-theme ModernToggleButton {
    background-color: #f0f0f0;
    color: #333;
    border: 2px solid #ccc;
}

.light-theme ModernToggleButton:hover {
    background-color: #e0e0e0;
    border: 2px solid #bbb;
}

.light-theme ModernToggleButton:checked {
    background-color: #0078d4;
    color: white;
    border: 2px solid #0078d4;
    font-weight: bold;
}

.light-theme ModernToggleButton:checked:hover {
