/* ОБЩИЕ СТИЛИ */
QMainWindow, QDialog, QWidget {
    font-family: Arial;
}

QLabel {
    background-color: transparent;
}

/* ОБЩИЕ СТИЛИ ДЛЯ ОКОН И ДИАЛОГОВ */
QMainWindow, QDialog {
    border-radius: 12px;
    padding: 15px;
}

/* ФОНЫ ДЛЯ ТЕМНОЙ ТЕМЫ */
.dark-theme QMainWindow,
.dark-theme QDialog,
.dark-theme QWidget {
    background-color: #18181A;
    color: #e0e0e0;
}

/* ФОНЫ ДЛЯ СВЕТЛОЙ ТЕМЫ */
.light-theme QMainWindow,
.light-theme QDialog,
.light-theme QWidget {
    background-color: #f3f3f3;
    color: #333333;
}

/* СТИЛЬ ПОИСКОВОГО ПОЛЯ ДЛЯ ТЕМНОЙ ТЕМЫ */
.dark-theme QLineEdit {
    background-color: #27282B;
    color: white;
    border: none;
    border-radius: 16px;
    padding: 10px 20px;
    font-size: 24px;
}

/* СТИЛЬ ПОИСКОВОГО ПОЛЯ ДЛЯ СВЕТЛОЙ ТЕМЫ */
.light-theme QLineEdit {
    background-color: #ffffff;
    color: #333333;
    border: none;
    border-radius: 16px;
    padding: 10px 20px;
    font-size: 24px;
}

/* СПИСКИ РЕЗУЛЬТАТОВ ПОИСКА ДЛЯ ТЕМНОЙ ТЕМЫ */
.dark-theme #searchResultsList,
.dark-theme QListWidget {
    background-color: rgba(35, 35, 40, 240);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 5px;
    font-size: 16px;
}

.dark-theme #searchResultsList::item,
.dark-theme QListWidget::item {
    background-color: rgba(50, 50, 55, 200);
    color: white;
    border: none;
    padding: 18px 20px;
    border-radius: 6px;
    margin: 4px 0;
}

.dark-theme #searchResultsList::item:selected,
.dark-theme QListWidget::item:selected {
    background-color: #64b5f6;
    color: black;
}

.dark-theme #searchResultsList::item:hover,
.dark-theme QListWidget::item:hover {
    background-color: #3a3a3a;
}

/* СПИСКИ РЕЗУЛЬТАТОВ ПОИСКА ДЛЯ СВЕТЛОЙ ТЕМЫ */
.light-theme #searchResultsList,
.light-theme QListWidget {
    background-color: rgba(255, 255, 255, 240);
    color: #333333;
    border: none;
    border-radius: 8px;
    padding: 5px;
    font-size: 16px;
}

.light-theme #searchResultsList::item,
.light-theme QListWidget::item {
    background-color: rgba(245, 245, 245, 200);
    color: #333333;
    border: none;
    padding: 18px 20px;
    border-radius: 6px;
    margin: 4px 0;
}

.light-theme #searchResultsList::item:selected,
.light-theme QListWidget::item:selected {
    background-color: #4285f4;
    color: white;
}

.light-theme #searchResultsList::item:hover,
.light-theme QListWidget::item:hover {
    background-color: #f0f0f0;
}

/* ПЛИТКИ ИГР ДЛЯ ТЕМНОЙ ТЕМЫ */
.dark-theme QFrame#GameTile {
    border-radius: 15px;
    text-align: center;
    font-size: 18px;
    min-height: 120px;
    background-color: #252525;
    color: white;
    border: 2px solid #3a3a3a;
}

.dark-theme QFrame#GameTile:hover,
.dark-theme QFrame#GameTile:focus {
    background-color: #353535;
    border: 3px solid #64b5f6;
}

/* ПЛИТКИ ИГР ДЛЯ СВЕТЛОЙ ТЕМЫ */
.light-theme QFrame#GameTile {
    border-radius: 15px;
    text-align: center;
    font-size: 18px;
    min-height: 120px;
    background-color: #ffffff;
    color: #333333;
    border: 2px solid #ccc;
}

.light-theme QFrame#GameTile:hover,
.light-theme QFrame#GameTile:focus {
    background-color: #f8f8f8;
    border: 3px solid #4285f4;
}

/* СТИЛИ ДЛЯ СТРАНИЦЫ НАСТРОЕК */
SettingsPage {
    background-color: #210101;
}

/* ЛЕВАЯ ПАНЕЛЬ С ПЛИТКАМИ */
#SettingsSidebar {
background-color: transparent;
border-radius: 10px;
}

.dark-theme #SettingsSidebar {
    background-color: #1e1e1e;
}

.light-theme #SettingsSidebar {
    background-color: #f8f8f8;
}

/* ЗАГОЛОВОК СТРАНИЦЫ НАСТРОЕК */
#SettingsTitle {
font-size: 20px;
font-weight: bold;
padding: 15px 10px;
margin-bottom: 5px;
}

.dark-theme #SettingsTitle {
    color: #ffffff;
}

.light-theme #SettingsTitle {
    color: #333333;
}

/* ОБЛАСТЬ ПРОКРУТКИ ПЛИТОК */
#SettingsTilesScroll {
background-color: transparent;
border: none;
border-radius: 8px;
}

#SettingsTilesScroll QWidget {
background-color: transparent;
}

/* ПЛИТКИ НАСТРОЕК - ВЕРТИКАЛЬНОЕ РАСПОЛОЖЕНИЕ */
QFrame#SettingsTile {
    border-radius: 10px;
    text-align: center;
    font-size: 14px;
    min-height: 112px;
    max-height: 150px;
    min-width: 200px;
    max-width: 300px;
    margin: 2px 5px;
    padding: 8px;
}

.dark-theme QFrame#SettingsTile {
    background-color: #252525;
    color: #ffffff;
    border: 2px solid #404040;
}

.dark-theme QFrame#SettingsTile[focused="true"] {
    background-color: #3d3d3d;
    border: 3px solid #64b5f6;
    font-weight: bold;
}

.dark-theme QFrame#SettingsTile:hover {
    background-color: #353535;
    border: 2px solid #555555;
}

.light-theme QFrame#SettingsTile {
    background-color: #ffffff;
    color: #333333;
    border: 2px solid #dddddd;
}

.light-theme QFrame#SettingsTile[focused="true"] {
    background-color: #f8f8f8;
    border: 3px solid #4285f4;
    font-weight: bold;
}

.light-theme QFrame#SettingsTile:hover {
    background-color: #f0f0f0;
    border: 2px solid #cccccc;
}

/* ТЕКСТ В ПЛИТКАХ НАСТРОЕК */
QFrame#SettingsTile QLabel {
    background-color: transparent;
    font-size: 12px;
    font-weight: bold;
    padding: 3px;
    margin: 0;
}

.dark-theme QFrame#SettingsTile QLabel {
    color: #ffffff;
}

.light-theme QFrame#SettingsTile QLabel {
    color: #333333;
}

/* ПРАВАЯ ПАНЕЛЬ ДЕТАЛЬНЫХ НАСТРОЕК */
#SettingsDetailsPanel {
background-color: transparent;
}

/* ЗАГОЛОВОК ДЕТАЛЬНЫХ НАСТРОЕК */
#DetailsTitle {
font-size: 18px;
font-weight: bold;
padding: 10px 15px;
margin-bottom: 10px;
}

.dark-theme #DetailsTitle {
    color: #ffffff;
    border-bottom: 2px solid #404040;
}

.light-theme #DetailsTitle {
    color: #333333;
    border-bottom: 2px solid #dddddd;
}

/* ОБЛАСТЬ ДЕТАЛЬНЫХ НАСТРОЕК */
#SettingsDetails {
background-color: transparent;
border: none;
border-radius: 10px;
padding: 15px;
}

.dark-theme #SettingsDetails {
    background-color: transparent;
    border: 1px solid #404040;
}

.light-theme #SettingsDetails {
    background-color: #ffffff;
    border: 1px solid #dddddd;
}

/* ЗАГОЛОВКИ РАЗДЕЛОВ В НАСТРОЙКАХ */
QLabel[objectName^="carousel_title"],
QLabel[objectName^="details_title"] {
    font-size: 18px;
    font-weight: bold;
    padding: 10px;
}

.dark-theme QLabel[objectName^="carousel_title"],
.dark-theme QLabel[objectName^="details_title"] {
    color: #ffffff;
}

.light-theme QLabel[objectName^="carousel_title"],
.light-theme QLabel[objectName^="details_title"] {
    color: #333333;
}

/* СТИЛИ ДЛЯ КОНТЕКСТНЫХ МЕНЮ В ТЕМНОЙ ТЕМЕ */
.dark-theme QMenu {
    background-color: #252525;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 5px;
}

.dark-theme QMenu::item {
    background-color: transparent;
    color: white;
    padding: 15px 20px;
    border-radius: 4px;
    font-size: 16px;
    min-width: 150px;
}

.dark-theme QMenu::item:selected {
    background-color: #4285f4;
    color: white;
}

.dark-theme QMenu::item:disabled {
    color: #888;
}

/* СТИЛИ ДЛЯ КОНТЕКСТНЫХ МЕНЮ В СВЕТЛОЙ ТЕМЕ */
.light-theme QMenu {
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 5px;
}

.light-theme QMenu::item {
    background-color: transparent;
    color: #333333;
    padding: 15px 20px;
    border-radius: 4px;
    font-size: 16px;
    min-width: 150px;
}

.light-theme QMenu::item:selected {
    background-color: #4285f4;
    color: white;
}

.light-theme QMenu::item:disabled {
    color: #aaa;
}

/* СТИЛИ ДЛЯ КНОПОК ВЫБОРА ТЕМЫ */
QPushButton#themeButton {
    border-radius: 10px;
    font-size: 18px;
    min-height: 200px;
    min-width: 300px;
    background-color: #252525;
    color: white;
    border: 2px solid #64b5f6;
}

QPushButton#themeButton:checked {
    background-color: #64b5f6;
    color: white;
}

QPushButton#themeButton:hover {
    background-color: #353535;
}

/* СТИЛИ ДЛЯ КНОПОК МАСТЕРА */
QWizard QPushButton {
    background-color: #4285f4;
    color: white;
    border-radius: 25px;
    font-size: 20px;
    min-width: 150px;
    min-height: 50px;
    padding: 10px 30px;
}

QWizard QPushButton:hover {
    background-color: #3a75d4;
}

QWizard QPushButton:pressed {
    background-color: #2a65c4;
}

/* СТИЛИ ДЛЯ ПРОГРЕСС-БАРА */
QProgressDialog {
    background-color: #252525;
    border: 2px solid #64b5f6;
    border-radius: 10px;
}

QProgressDialog QLabel {
    font-size: 16px;
    color: #e0e0e0;
}

QProgressDialog QProgressBar {
    min-height: 20px;
    border-radius: 10px;
    background-color: #1b1b1b;
    border: 1px solid #333;
}

QProgressDialog QProgressBar::chunk {
    background-color: #64b5f6;
    border-radius: 10px;
}

/* СТИЛИ ДЛЯ ОБЫЧНЫХ КНОПОК */
QPushButton {
    min-height: 44px;
    min-width: 120px;
    border-radius: 8px;
    font-size: 16px;
    padding: 10px 16px;
    background-color: #4285f4;
    color: white;
    border: 1px solid #64b5f6;
}

QPushButton:hover {
    background-color: #3a75d4;
}

QPushButton:pressed {
