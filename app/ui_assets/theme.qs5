    border: 4px dashed #64b5f6;
}

.dark-theme QPushButton#LargeAddGameArea:pressed {
    background-color: #252525;
    border: 4px dashed #4285f4;
}

.light-theme QPushButton#LargeAddGameArea {
    background-color: #ffffff;
    color: #333333;
    border: 4px dashed #dddddd;
}

.light-theme QPushButton#LargeAddGameArea:hover {
    background-color: #ffffff;
    border: 4px dashed #4285f4;
}

.light-theme QPushButton#LargeAddGameArea:pressed {
    background-color: #ffffff;
    border: 4px dashed #3a75d4;
}

/* Стили для текста внутри большой кнопки-области */
QPushButton#LargeAddGameArea QLabel {
    background: transparent;
    font-size: 24px;
